<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">


    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:forceDarkAllowed="false"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/easyhirelogo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/easyhirelogo"
        android:screenOrientation="portrait"
        android:supportsRtl="true"
        android:theme="@style/Theme.EasyHire"
        tools:targetApi="31"
        tools:ignore="DiscouragedApi">
        <activity
            android:name=".Activities.MoreElementsActivity"
            android:exported="false" />
        <activity
            android:name=".Activities.AppSplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.LoginActivity"
            android:exported="true" />

        <activity
            android:name=".Activities.CreateAccountActivity"
            android:exported="true" />
        <activity
            android:name=".Activities.UserModeActivity"
            android:exported="true" />
        <activity
            android:name=".Activities.MainMenuActivity"
            android:exported="true" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />
        <meta-data
            android:name="com.facebook.sdk.ClientToken"
            android:value="@string/facebook_client_token" />
    </application>

</manifest>
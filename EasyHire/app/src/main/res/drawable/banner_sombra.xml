<!-- res/drawable/half_circle.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Capa de color sólido para el medio círculo -->
    <item>
        <shape android:shape="oval">
            <size android:width="200dp" android:height="100dp" /> <!-- Tamaño del medio círculo -->
            <solid android:color="#7530B4E4" /> <!-- Color del medio círculo -->
        </shape>
    </item>

    <!-- Capa de transparencia para cubrir la mitad superior -->
    <item
        android:left="0dp"
        android:right="0dp"
        android:top="-50dp"> <!-- Ajusta la posición para cortar la mitad superior -->
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>
</layer-list>
